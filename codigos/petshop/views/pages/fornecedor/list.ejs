<%- contentFor('body') %>
<h1>Fornecedores</h1>

<div class="row">
    <div class="col-xs-1-12 p-2">
        <a href="/fornecedor/new">
            <button type="button" class="btn btn-primary">Novo</button>
        </a>
    </div>
</div>

<div class="row">
    <% if (fornecedores.length === 0) { %>
        <div class="col-xs-1-12 p-2">
            <h5>Ainda n√£o tem fornecedores cadastrados...</h5>
        </div>
    <% } %>

    <% for (fornecedor of fornecedores){%>

    <div class="col-xs-1-12 p-2">
        <div class="card">
            <!-- <img class="card-img-top" src="https://via.placeholder.com/250" alt="Card image cap"> -->
            <div class="card-body">
                <h5 class="card-title"><%= fornecedor.nome %> <%= fornecedor.sobrenome %></h5>
                <p class="card-text">E-mail: <%= fornecedor.email %></p>
                <a href="/fornecedor/edit/<%= fornecedor.id %>" class="btn btn-primary">Editar</a>
                <a href="/fornecedor/delete/<%= fornecedor.id %>" class="btn btn-secondary">Remover</a>
            </div>
        </div>
    </div>
    <% } %>

</div>